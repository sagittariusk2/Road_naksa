<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Admin!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Road-Naksha"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="409dp"
        android:layout_height="488dp"
        android:background="@drawable/rec1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Select Nagar"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nagarA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar A"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/nagarB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar B"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/nagarC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar C"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/nagarD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar D"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/nagarE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar E"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/nagarF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar F"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/nagarG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar G"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/nagarH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagar H"
                    android:textColor="@color/white" />
            </LinearLayout>

        </ScrollView>


    </RelativeLayout>








</androidx.constraintlayout.widget.ConstraintLayout>